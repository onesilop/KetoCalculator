@page
@model KetoCalculator.Pages.User.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UserGoals</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserGoals.GoalId" />
            <div class="form-group">
                <label asp-for="UserGoals.UserId" class="control-label"></label>
                <input asp-for="UserGoals.UserId" class="form-control" />
                <span asp-validation-for="UserGoals.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserGoals.GoalDate" class="control-label"></label>
                <input asp-for="UserGoals.GoalDate" class="form-control" />
                <span asp-validation-for="UserGoals.GoalDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserGoals.GoalCalories" class="control-label"></label>
                <input asp-for="UserGoals.GoalCalories" class="form-control" />
                <span asp-validation-for="UserGoals.GoalCalories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserGoals.GoalRatio" class="control-label"></label>
                <input asp-for="UserGoals.GoalRatio" class="form-control" />
                <span asp-validation-for="UserGoals.GoalRatio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserGoals.RecipeType" class="control-label"></label>
                <input asp-for="UserGoals.RecipeType" class="form-control" />
                <span asp-validation-for="UserGoals.RecipeType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
